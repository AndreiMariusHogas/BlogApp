<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui fluid image"  src="<%=blog.image%>" alt="" class="ui">
                <div class="content">
                        <p><%=blog.created.toDateString()%></p> 
                </div>
                <div class="description">
                        <p><%- blog.body%></p>
                </div>
                <a class="ui primary basic button" href="/blogs/<%=blog.id%>/edit">EDIT</a>
                <form id="delete"  action="/blogs/<%=blog.id%>?_method=DELETE" method="POST">
                    <button class="ui red basic button"> DELETE</button>
                </form>
            </div>
            </div>    
        </div>
</div>

<% include partials/footer%>